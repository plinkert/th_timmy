{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://threat-hunting-lab/schemas/data-package.json",
  "title": "Data Package Schema",
  "description": "Standardized structure for threat hunting data packages, independent of source (manual/API)",
  "type": "object",
  "required": [
    "metadata",
    "data"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "package_id",
        "created_at",
        "version",
        "source_type",
        "source_name"
      ],
      "properties": {
        "package_id": {
          "type": "string",
          "description": "Unique identifier for the data package",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when package was created"
        },
        "version": {
          "type": "string",
          "description": "Data package schema version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "default": "1.0.0"
        },
        "source_type": {
          "type": "string",
          "enum": [
            "manual",
            "api",
            "file",
            "database",
            "stream"
          ],
          "description": "Type of data source"
        },
        "source_name": {
          "type": "string",
          "description": "Name/identifier of the data source (e.g., 'Microsoft Defender', 'Splunk', 'manual_upload')"
        },
        "source_config": {
          "type": "object",
          "description": "Optional configuration for the data source",
          "additionalProperties": true
        },
        "ingest_mode": {
          "type": "string",
          "enum": [
            "manual",
            "api"
          ],
          "description": "Mode of data ingestion",
          "default": "manual"
        },
        "query_info": {
          "type": "object",
          "description": "Information about the query used to obtain data",
          "properties": {
            "query_id": {
              "type": "string",
              "description": "Identifier of the query"
            },
            "query_text": {
              "type": "string",
              "description": "The actual query text"
            },
            "tool": {
              "type": "string",
              "description": "Tool used to execute the query (e.g., 'Microsoft Defender', 'Splunk')"
            },
            "technique_id": {
              "type": "string",
              "description": "MITRE ATT&CK technique ID (e.g., 'T1566')"
            },
            "time_range": {
              "type": "string",
              "description": "Time range for the query (e.g., '7d', '24h')"
            },
            "executed_at": {
              "type": "string",
              "format": "date-time",
              "description": "When the query was executed"
            }
          }
        },
        "anonymization": {
          "type": "object",
          "description": "Anonymization information",
          "properties": {
            "is_anonymized": {
              "type": "boolean",
              "description": "Whether data is anonymized"
            },
            "anonymization_method": {
              "type": "string",
              "enum": [
                "deterministic",
                "hash",
                "tokenization",
                "none"
              ],
              "description": "Method used for anonymization"
            },
            "mapping_table_id": {
              "type": "string",
              "description": "ID of the mapping table used for deanonymization"
            }
          }
        },
        "validation": {
          "type": "object",
          "description": "Validation information",
          "properties": {
            "is_valid": {
              "type": "boolean",
              "description": "Whether package passed validation"
            },
            "validated_at": {
              "type": "string",
              "format": "date-time",
              "description": "When validation was performed"
            },
            "validation_errors": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of validation errors"
            },
            "validation_warnings": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of validation warnings"
            }
          }
        },
        "statistics": {
          "type": "object",
          "description": "Package statistics",
          "properties": {
            "total_records": {
              "type": "integer",
              "minimum": 0,
              "description": "Total number of records in package"
            },
            "unique_sources": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of unique data sources"
            },
            "unique_event_types": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of unique event types"
            },
            "time_range": {
              "type": "object",
              "description": "Time range of data in package",
              "properties": {
                "start": {
                  "type": "string",
                  "format": "date-time"
                },
                "end": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    },
    "data": {
      "type": "array",
      "description": "Array of normalized data records",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "source",
          "event_type"
        ],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of the event"
          },
          "source": {
            "type": "string",
            "description": "Data source identifier"
          },
          "event_type": {
            "type": "string",
            "description": "Type of event"
          },
          "raw_data": {
            "type": "object",
            "description": "Original raw data from source",
            "additionalProperties": true
          },
          "normalized_fields": {
            "type": "object",
            "description": "Normalized/extracted fields",
            "additionalProperties": true,
            "properties": {
              "hostname": {
                "type": "string"
              },
              "ip_address": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "process_name": {
                "type": "string"
              },
              "command_line": {
                "type": "string"
              },
              "file_path": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "domain": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high",
                  "critical",
                  "informational"
                ]
              }
            }
          }
        }
      }
    }
  }
}

