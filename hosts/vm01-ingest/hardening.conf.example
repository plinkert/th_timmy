# Hardening Configuration Example for VM-01: Ingest/Parser
# Copy this file to hardening.conf and customize as needed
# Usage: source hardening.conf before running harden_vm01.sh

# SSH Configuration
export SSH_PORT=22              # SSH port (default: 22)
export SSH_TIMEOUT=300          # SSH connection timeout in seconds (default: 300)

# Firewall Configuration
export COLLECTOR_PORTS=""       # Comma-separated list of collector ports (e.g., "8080,9090")
export ALLOWED_NETWORK=""       # Network CIDR to allow (e.g., "192.168.244.0/24")
                                # If empty, ports are open to all (less secure)

# Optional Features
export ENABLE_AUDITD=false      # Enable system auditing with auditd (default: false)

# Examples:
# 
# Restrict access to specific network:
# export ALLOWED_NETWORK="192.168.244.0/24"
#
# Open collector ports:
# export COLLECTOR_PORTS="8080,9090"
#
# Enable auditd:
# export ENABLE_AUDITD=true
#
# Change SSH port:
# export SSH_PORT=2222

